<com.dsu.next.mush.ui.SlidingFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fragment_style">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Song info tab-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.3"
            android:layout_marginTop="@dimen/info_song_meta_layout_margin_top"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:text="This Is Madness"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="@dimen/info_song_meta_song_artist_box_margin_top"
                android:text="Max Anarchy OST"/>
        </LinearLayout>

        <!--ID Tab-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/search_box_height"
            android:layout_marginTop="@dimen/info_link_box_margin_top"
            android:layout_marginBottom="@dimen/info_link_box_margin_bot"
            android:layout_marginEnd="@dimen/search_box_horizontal_margin"
            android:layout_marginStart="@dimen/search_box_horizontal_margin"
            android:orientation="horizontal">

            <TextView
                style="@style/search_box_style"
                android:id="@+id/edit_message"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="https://www.youtube.com/watch?v=CouB9aQ9vvc"
                android:layout_weight="1" />


            <Button
                android:layout_width="@dimen/search_btn_size"
                android:layout_height="@dimen/search_btn_size"
                android:background="@drawable/share_icon"
                android:gravity="center_vertical" />
        </LinearLayout>

        <!--Links-->
        <ListView
            android:layout_weight="0.3"
            android:id="@+id/converted_link_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

    </LinearLayout>

</com.dsu.next.mush.ui.SlidingFrameLayout>