<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/link_row_height"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/music_provider_logo_width"
        android:layout_height="@dimen/music_provider_logo_height"
        android:layout_gravity="center_vertical"
        android:background="@drawable/youtube_logo" />

    <TextView
        android:id="@+id/link_definition"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://www.youtube.com/watch?v=wPRNYGiQUOU" />
</LinearLayout>